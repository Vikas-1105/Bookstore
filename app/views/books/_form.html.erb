<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :author_id %>
    <%= form.select :author_id, options_from_collection_for_select(Author.all, :id, :first_name, form.object.author_id), prompt: "-- Select Author --" %>
  </div>

  <div class="field">
    <%= form.label :supplier_id %>
    <%= form.select :supplier_id, options_from_collection_for_select(Supplier.all, :id, :supplier_name, form.object.supplier_id), prompt: "-- Select Supplier --" %>
  </div>


  <div class="field">
    <%= form.label :book_name %>
    <%= form.text_field :book_name %>
  </div>

  <div class="field">
    <%= form.label :book_price %>
    <%= form.number_field :book_price %>
  </div>

  <div class="field">
    <%= form.label :year_of_publish %>
    <%= form.text_field :year_of_publish %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
